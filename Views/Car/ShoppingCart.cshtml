@{
    ViewBag.Title = "Shopping Cart";
}
<section id="car-pagination">
    <div class="content-holder">
        <div class="page-main-heading extra-space">
            <div class="heading-location">
                <h2><span class="bold">Home</span></h2>
                <p class="page-location">
                    <a href="@Url.Action("Index")">Shopping Cart</a>
                </p>
            </div>
            <div class="extra-info">
                <h2 class="bold text-shadow title-color">Used Cars Remarketing Factory Outlet</h2>
                <h5>654 W Bridge St, Morrisville, PA 19067, United States</h5>
                <h5>Phone: (215)295-1515 </h5>
                <h5>Text: ‎(267)800-6119 </h5>
                <h5>Fax: (215)-428-4932</h5>
                <h5>Email: autoprestigeimports@gmail.com</h5>
            </div>
        </div>
    </div>
</section>

<section id="shopping-cart-content" ng-controller="ShoppingCartController">
    <div class="content-holder">
        <div class="table-responsive">
            <table id="cartTable"
                   st-table="VisibleItems"
                   st-safe-src="Items"
                   class="table table-striped table-bitemed table-advance table-hover">
                <thead>
                    <tr>
                        <th st-sort="_id">Id</th>
                        <th st-sort="_data.Description">Description</th>
                        <th st-sort="_quantity">Quantity</th>
                        <th st-sort="_price">Price</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="item in VisibleItems">
                        <td nowrap="nowrap" class="car-image-cell">
                            <img ng-src="{{item.GetData().ImageUrl}}" alt="Item url" ng-click="GoToItemDetailsPage(item._id,true)" />
                        </td>

                        <td class="item-link">
                            <span>{{item.GetData().Description}}</span>
                        </td>
                        <td class="num">{{item.GetQuantity()}}</td>
                        <td class="num">{{item.GetTotal()|currency}}</td>
                        <td class="actions">
                            <a ng-click="DeleteItem(item)">
                                <i class="fa fa-remove"></i>
                            </a>
                        </td>
                    </tr>
                </tbody>
                <tfoot>
                    <tr>
                        <td class="bold" colspan="6">
                            <div class="pull-left">Total Amount:</div>
                            <div class="pull-right">{{CartTotal |currency}}</div>
                        </td>
                    </tr>
                    @*<tr>
                            <td colspan="6">
                                <div st-pagination="" st-items-by-page="GridModel.Take" class="pull-right">

                                </div>
                            </td>
                        </tr>*@
                </tfoot>
            </table>
        </div>
        <div>
            <button type="button" class="button pull-left mr10"
                    ng-click="Clear()"
                    ng-show="VisibleItems.length>0">
                <i class="fa fa-remove"></i> Clear
            </button>
            
            <button type="button" class="button pull-left"
                    ng-click="GoBack()"
                    >
                <i class="fa fa-remove"></i> Cancel
            </button>

            <button type="button"
                    ng-show="VisibleItems.length>0"
                    class="button color green pull-right" ng-click="Checkout()">
                <i class="fa fa-money"></i> Checkout
            </button>
        </div>
    </div>
</section>
