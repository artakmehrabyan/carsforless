@model dynamic

@{
    ViewBag.Title = "Find Car";
}

<article class="block cars-filter" ng-controller="carFilterController" ng-cloak>
    <a class="filter-cancel-button" href="@Url.Action("List","Car")">
        <i class="fa fa-remove"></i>
    </a>
    <div class="container">
        <form>
            <div class="form-group">
                <label for="Make">Make:</label>
                <select id="Make" ng-model="Model.Make" class="form-control">
                    <option value=""></option>
                    <option ng-selected="item.Name==Model.Make" ng-repeat="item in Manufacturers" value="{{item.Name}}">{{item.Name}}</option>
                </select>
            </div>
            <div class="form-group">
                <label for="Model">Model:</label>
                <select id="Model" ng-model="Model.Model" class="form-control">
                    <option value=""></option>
                    <option ng-selected="m==Model.Model" ng-repeat="m in Models" value="{{m.Name}}">{{m.Name}}</option>
                </select>
            </div>
            <div class="form-group">
                <label for="Color">Color:</label>
                <select id="Color" ng-model="Model.Color" class="form-control">
                    <option value=""></option>
                    <option ng-selected="c==Model.Color" ng-repeat="c in Colors" value="{{c}}">{{c}}</option>
                </select>
            </div>
            <div class="form-group">
                <label>Price:</label>
                <div class="input-group">
                    <div class="input-group-addon">Min</div>
                    <input type="text" ng-model="Model.MinPrice" class="form-control"/>
                    <div class="input-group-addon">Max</div>
                    <input type="text" ng-model="Model.MaxPrice" class="form-control"/>
                </div>
            </div>
            <div class="form-group">
                <label>Miles:</label>
                <div class="input-group">
                    <div class="input-group-addon">Min</div>
                    <input type="text" ng-model="Model.MinMileage" class="form-control"/>
                    <div class="input-group-addon">Max</div>
                    <input type="text" ng-model="Model.MaxMileage" class="form-control"/>
                </div>
            </div>
            <div class="form-group">
                <label>Year:</label>
                <div class="input-group">
                    <div class="input-group-addon">Min</div>
                    <input type="text" ng-model="Model.MinYear" class="form-control"/>
                    <div class="input-group-addon">Max</div>
                    <input type="text" ng-model="Model.MaxYear" class="form-control"/>
                </div>
            </div>
            <div class="form-group">
                <button class="btn btn-block btn-primary" type="button" ng-click="Apply()">
                    <i class="fa fa-check"></i> Apply
                </button>
                <button class="btn btn-block btn-default" type="button" ng-click="ClearAll()">
                    <i class="fa fa-remove"></i> Clear
                </button>
            </div>
        </form>
    </div>
</article>
