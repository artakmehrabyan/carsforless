@using Freemoded.Automotive.Frame.Web.Mvc
@{
    ViewBag.Title = "Users";
}
<section class="panel panel-default" ng-controller="UsersController">
    <div contextmenu="grid.contextmenu" class="dropdown contextmenu">
        <ul class="dropdown-menu" role="menu">
            <li>
                <a href="javascript:void(0);"
                   ng-click="AddNew()">
                    <i class="fa fa-plus"></i> Add New
                </a>
            </li>
            <li>
                <a href="javascript:void(0);"
                   ng-click="EditRow(grid.contextmenu.$item)"
                   ng-show="grid.contextmenu.$item!=null">
                    <i class="fa fa-edit"></i> Edit
                </a>
            </li>

            <li>
                <a href="javascript:void(0);"
                   ng-click="DeleteRow(grid.contextmenu.$item)"
                   ng-show="CanDeleteRow(grid.contextmenu.$item)">
                    <i class="fa fa-remove"></i> Delete
                </a>
            </li>
            <li class="divider"></li>
            <li>
                <a href="javascript:void(0);"
                   ng-click="Refresh()">
                    <i class="fa fa-refresh"></i> Refresh
                </a>
            </li>
            <li class="divider"></li>
            <li>
                <a role="menu" tabindex="-1" href ng-click="AppServices.Common.CopySelectionToClipboard()">
                    <i class="fa fa-copy"></i>  Copy
                </a>
            </li>
        </ul>
    </div>
    <div class="panel-body">
        <div class="toolbar clearfix">
            <div class="input-group form-inline col-lg-4 col-md-4 col-sm-5 pull-right">
                <input type="text"
                       ng-enter="Refresh()"
                       class="form-control input-sm"
                       id="Search"
                       ng-model="GridModel.Search"
                       placeholder="Search">
                <div class="input-group-btn">
                    <button type="button" class="btn btn-sm btn-primary" ng-click="Refresh()">
                        <i class="fa fa-search"></i> Search
                    </button>
                    <button type="button" class="btn btn-white btn-sm" ng-click="ClearFilter(true)">
                        <i class="fa fa-close"></i> Reset
                    </button>

                </div>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="mt20">
            <div class="table-scrollable">
                <table id="item" st-table="VisibleRows"
                       st-pipe="LoadData"
                       contextmenu-container="grid.contextmenu"
                       st-safe-src="Rows"
                       class="table table-striped table-bordered table-advance table-hover">
                    <thead>
                    <tr>
                        <th nowrap="" st-sort="UserName">UserName</th>
                        <th nowrap="" st-sort="Email">Email</th>
                        <th nowrap="" st-sort="IsSystemAccount">Is System Account</th>
                        <th nowrap="" st-sort="IsActive">IsActive</th>
                        <th nowrap="" st-sort="LastIpAddress">Last Ip Address</th>

                    </tr>
                    </thead>
                    <tbody>
                    <tr ng-repeat="user in VisibleRows" ng-dblclick="EditRow(user)"
                        contextmenu-item="user">
                        <td style="width: 240px;">
                            {{user.UserName}}
                        </td>
                        <td>
                            {{user.Email}}
                        </td>
                        <td class="checkbox-cell">
                            <input icheck
                                   type="checkbox"
                                   disabled=""
                                   ng-model="user.IsSystemAccount">
                        </td>
                        <td class="checkbox-cell">
                            <input icheck
                                   type="checkbox"
                                   disabled=""
                                   ng-model="user.IsActive">
                        </td>
                        <td>
                            {{user.LastIpAddress}}
                        </td>

                    </tr>
                    </tbody>
                    <tfoot>
                    <tr>
                        <td colspan="10">
                            <div st-pagination="" st-items-by-page="GridModel.Take" st-displayed-pages="5" class="pull-right">

                            </div>
                        </td>
                    </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</section>

