@using System.Security.Policy
@using Freemoded.Automotive.Frame.Web.Mvc
@{
    Layout = null;
}
<!DOCTYPE html>
<html ng-app="admin">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>BILL OF SALE</title>
    @Styles.Render("~/content/bootstrap/css")
    @Styles.Render("~/content/ng-sortable")
    @Styles.Render("~/content/assets/css")

    <link href="~/Content/billofsale.css" rel="stylesheet" />
</head>
<body ng-controller="BillOfSaleController">
    <div class="bill-of-sale">
        <div class="title">
            PRESTIGE IMPORTS AUTO SALES : Buyer/Driver agreement
        </div>
        <div class="logo">
            <img src="@Html.MixImg("bill-of-sale-car.png")" alt="Car" />
        </div>
        <div class="addresses">
            <div>
                <label>Address:</label><span>654 West Bridge Street, Morrisville, PA 19067</span>
            </div>
            <div>
                <label>Phone:</label><span>(215)-295-1515</span><label> Fax:</label><span>(215)-428-4932</span>
            </div>
            <div>
                <label>Email:</label><span class="email">autoprestigeimports@gmail.com</span>
            </div>
        </div>
        @*<div class="sub-title">
                Vehicle Bill of Sale
            </div>*@
        <hr class="line" />
        <span class="text">
            For the Exact Sales Amount indicated below, I the Seller, do hereby sell and transfer ownership of the Vehicle described below

            to the Buyer, acknowledge full receipt of payment, certify that I have the authority to sell it, warrant the Vehicle to be free of any

            liens or encumbrances, and certify that all information given is true and correct to the best of my knowledge.
        </span>
        <div class="table-responsive">
            <table class="table table-hover table-bordered table-advance">
                <tbody>
                    <tr>
                        <th colspan="7" class="center-text">Vehicle Information</th>
                    </tr>
                    <tr>
                        <th>Make</th>
                        <th>Model</th>
                        <th>Year</th>
                        <th>Color</th>
                        <th>Body Type</th>
                        <th>Miles</th>
                        <th>Vehicle Identification Number</th>
                    </tr>
                    <tr>
                        <td>{{Item.Make}}</td>
                        <td>{{Item.Model}}</td>
                        <td>{{Item.Year}}</td>
                        <td>{{Item.Color}}</td>
                        <td>{{Item.Type}}</td>
                        <td>{{Item.Mileage}}</td>
                        <td>{{Item.Vin}}</td>
                    </tr>
                </tbody>
                <tbody></tbody>
            </table>
        </div>
        <div>
            <label class="bold">
                Conditions and Warranty:
            </label>
            <span>
                The Seller has no knowledge of any hidden defects in and to the Vehicle, and believes

                to the best of the Seller's knowledge that the Vehicle is being sold in good operating condition.
            </span>
        </div>
        <div>
            <label class="bold">
                Used Car Warranty:
            </label>
            <span>
                {{Item.Warranty}}
            </span>
        </div>
        <div>
            <label class="bold">
                Buyer was notified on the title brand as:
            </label>
            <span>{{Item.Brand.Description}}</span>
        </div>
        <h5 class="bold">Buyer/Driver agreement</h5>
        <div class="table-responsive">
            <table class="table table-hover table-bordered table-advance">
                <tbody>
                    <tr>
                        <td rowspan="8">
                            By Signing below buyer/buyers affirm and understands this agreement that will state as follows:<br />
                            •	The buyer/buyers least 18 years of age, have a valid driver's license number (<b>{{Item.DriverLicense}}</b>), and possess a valid and active personal insurance automobile coverage indicated below. <br />[ &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; ]<br />
                            •	The buyer/buyers voluntarily agree and understands that personal insurance coverage will be used to drive the vehicle mentioned above at the section for Vehicle Information. [&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; ]<br />
                            •	The buyer/buyers voluntarily agree and understands that their personal insurance will be used to cover any claims and will be responsible for damages or injury made in case of the accident. [&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; ]<br />
                            •	The buyer/buyers agree and will not permit any unauthorized persons not covered by buyer personal insurance to drive the vehicle. [&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; ]<br />
                            •	The buyer/buyers to drive the vehicle mentioned above at the section for Vehicle Information will use license plate 
                            <b>{{Item.PlateTrackNo}}</b> [&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; ].

                        </td>
                        <td class="bold blue">Sales Price:</td>
                        <td>{{Item.BillPrice|currency}}</td>
                        <td class="bold blue" nowrap="">Total Amount</td>
                        <td class="bold">{{(Item.BillPrice+Item.SalesTax+Item.RegistrationFee+Item.MiscFee)|currency}}</td>
                    </tr>

                    <tr>
                        <td class="bold blue" nowrap="">Sales Tax</td>
                        <td>{{Item.SalesTax|currency}}</td>
                        <td class="bold blue" nowrap="">Trade In Price</td>
                        <td class="bold">{{Item.BillTradePrice==null?0:Item.BillTradePrice|currency}}</td>
                    </tr>
                    <tr>
                        <td class="bold blue" nowrap="">Registration Fee</td>
                        <td>{{Item.RegistrationFee|currency}}</td>
                        <td class="bold blue" nowrap="">Paid Amount</td>
                        <td class="bold">{{Item.TotalPaidAmountBoS|currency}}</td>
                    </tr>
                    <tr>
                        <td class="bold blue" nowrap="">Misc. Fee</td>
                        <td>{{Item.MiscFee|currency}}</td>
                        <td class="bold blue" nowrap="">Total Balance Due</td>
                        <td class="bold">
                            {{((Item.BillPrice+Item.SalesTax+Item.RegistrationFee+Item.MiscFee)-(Item.TotalPaidAmountBoS+Item.BillTradePrice))|currency}}
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

        @*<div class="table-responsive">
                <table class="table table-hover table-bordered table-advance">
                    <tbody>
                        <tr>
                            <th>
                                SELLER'S ADDRESS<br />
                                654 WEST BRIDGE STREET
                            </th>
                            <th>
                                CITY<br />
